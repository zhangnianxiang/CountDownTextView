<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <!-- day -->
    <LinearLayout
        android:id="@+id/layout_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_day_decade"
            style="@style/Widget_CountDownTextViewStyle" />

        <TextView
            android:id="@+id/tv_day_unit"
            style="@style/Widget_CountDownTextViewStyle" />

        <TextView
            android:id="@+id/tv_day"
            style="@style/Widget_CountDownTextViewUnitStyle"
            android:text="@string/cdtv_unit_day" />
    </LinearLayout>

    <!-- hour -->
    <LinearLayout

        android:id="@+id/layout_hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_hour_decade"
            style="@style/Widget_CountDownTextViewStyle" />

        <TextView
            android:id="@+id/tv_hour_unit"
            style="@style/Widget_CountDownTextViewStyle" />

        <TextView
            android:id="@+id/tv_hour"
            style="@style/Widget_CountDownTextViewUnitStyle"
            android:text="@string/cdtv_unit_huor" />
    </LinearLayout>


    <!-- minu -->
    <LinearLayout

        android:id="@+id/layout_minu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_minu_decade"
            style="@style/Widget_CountDownTextViewStyle" />

        <TextView
            android:id="@+id/tv_minu_unit"
            style="@style/Widget_CountDownTextViewStyle" />

        <TextView
            android:id="@+id/tv_minu"
            style="@style/Widget_CountDownTextViewUnitStyle"
            android:text="@string/cdtv_unit_minu" />

    </LinearLayout>

    <!-- second -->
    <LinearLayout
        android:id="@+id/layout_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_second_decade"
            style="@style/Widget_CountDownTextViewStyle" />

        <TextView
            android:id="@+id/tv_second_unit"
            style="@style/Widget_CountDownTextViewStyle" />

        <TextView
            android:id="@+id/tv_second"
            style="@style/Widget_CountDownTextViewUnitStyle"
            android:text="@string/cdtv_unit_second" />
    </LinearLayout>
</LinearLayout>